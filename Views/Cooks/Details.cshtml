@model Cheffie.Models.Cook
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager;
@inject SignInManager<IdentityUser> signInManager;
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cook</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Skill)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Skill)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DOB)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DOB)
        </dd>
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.File)
        </dt>
         <dd class = "col-sm-10">
         <img src="/upload/@Html.DisplayFor(model => model.FilePath)" style=" width:320px; height:auto" />
         </dd>
    </dl>
</div>
<div>
    @if (signInManager.IsSignedIn(User) && @UserManager.GetUserId(User) == Model.OwnerID)
    {
        <a asp-action="Edit" asp-route-id="@Model?.CookId">Edit</a>
    }
    |
    <a asp-action="Index">Back to List</a>
</div>
